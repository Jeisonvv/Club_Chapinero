---
import { getCollection } from "astro:content";

const servicios = await getCollection("services");

---

<div class="container_Carrusel">
  <div class="carrusel">
    {
      servicios.map((servicio, index) => {
        const { slug, data } = servicio;
        const { title, img } = data;
        return (
          <div
            class="carrusel-item"
            style={`--index: ${index}; --total: ${servicios.length};`}
          >
            <div class="container-img">
              <a href={`servicios/${slug}`}>
                <img src={img} alt={title} />
              </a>
            </div>
            <div class="container-text">
              <h2>{title}</h2>
              </div>
          </div>
        );
      })
    }
  </div>
</div>

<style>
  .container_Carrusel {
    width: 90%;
    height: 400px;
    perspective: 1000px;
    padding-top: 3px;
    margin-top: 10px;
    margin-bottom: 10px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .carrusel {
    position: relative;
    width: 100%; /* ancho fijo centrado */
    height: 300px;

    transform-style: preserve-3d;
    animation: rotate 20s infinite linear;
    transform-origin: center center;
  }

  .carrusel-item {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 65%;
    height: 90%;
    left: 15%;
    top: 0;
    padding-top: 5px;
    overflow: hidden;
    background: rgba(59, 59, 59, 0.545);
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.741);
    transform-style: preserve-3d;
    transition: transform 1s;
    /* transormacio de*/
    transform: rotateY(calc(var(--index) * (360deg / var(--total))))
      translateZ(120px);
  }

  .container-img {
    max-width: 90%;
    height: 80%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    object-fit: cover;

  }
  .container-img img {
    max-width: 95%;
    height: auto;
    object-fit: cover;
    margin-top: 2px;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(49, 3, 232, 0.5);
    transition: transform 0.5s ease;
  }
  /* pausar la animacion*/
  .container_Carrusel:hover .carrusel {
    animation-play-state: paused;
    transform: scale(2);
  }

  @keyframes rotate {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(360deg);
    }
  }
  @media screen and (min-width: 768px) {
    .container_Carrusel {
      width: 60%;
      height: 400px;
    }
    .carrusel-item {
      width: 40%;
      height: 100%;
      left: 30%;
    }

    .carrusel-item:nth-child(1) {
      transform: rotateY(0deg) translateZ(250px);
    }
    .carrusel-item:nth-child(2) {
      transform: rotateY(90deg) translateZ(250px);
    }
    .carrusel-item:nth-child(3) {
      transform: rotateY(180deg) translateZ(250px);
    }
    .carrusel-item:nth-child(4) {
      transform: rotateY(270deg) translateZ(250px);
    }
  }
</style>
