---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const servicios = await getCollection("services");
  return servicios.map((servicio) => ({
    params: { id: servicio.slug },
    props: { servicio },
  }));
}

const { servicio } = Astro.props;
const { data, slug } = servicio;
const { title, img, description } = data;
---

<Layout title={title} description={description} img={img}>
  <div class="container">
    <h1 transition:name={`title-${slug}`}>{title}</h1>
    <img src={img} alt={title} />
    <p>{description}</p>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 20px;
  }

  img {
    max-width: 100%;
    height: auto;
    margin-bottom: 20px;
  }

  p {
    font-size: 1.2rem;
    text-align: center;
    max-width: 800px;
  }
</style>
